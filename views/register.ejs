<%- include('partials/header') %>
<img class="background-matcha" src="/content/images/backgrounds/finish.jpg"/>
<div class='logo-wrapper'>
            <img src="content/images/matcha-logo.png" />
</div>
<div class="form-container">
    <h2>Inscription</h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="first_name">Ton prenom</label>
            <input type="text" name="first_name" id="first_name" class="form-control" value="<%= locals.first_name || '' %>" required />
        </div>
        <div class="form-group">
            <label for="last_name">Ton nom</label>
            <input type="text" name="last_name" id="last_name" class="form-control" value="<%= locals.last_name || '' %>" required />
        </div>
        <div class="form-group">
            <label for="login">Ton pseudo</label>
            <input type="text" name="login" id="login" class="form-control" value="<%= locals.login || '' %>" required />
        </div>
        <div class="form-group">
            <label for="email">Ton email</label>
            <input type="emal" name="email" id="email" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="password">Ton mot de passe</label>
            <input type="password" name="password" id="password" class="form-control" required />
        </div>
        <div class="form-group">
            <button type="submit" class="auth-btn btn btn-primary">S'inscrire</button>
            <a href="/login" class="register-link btn btn-link">Annuler</a>
        </div>
    </form>
</div>
<%- include('partials/footer') %>