<%- include('partials/header') %>
<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css" />
<img class="background-matcha" src="/content/images/backgrounds/finish.jpg"/>
<div class='logo-wrapper'>
    <img src="/content/images/matcha-logo.png" />
</div>
<div class="form-container">
    <h2>Creer votre nouveau mot de passe ?</h2>
    <% if(locals.error) { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="password">Nouveau mot de passe</label>
            <input class="form-control" name='password' type="password" placeholder="Password" id="password" required>
        </div>
        <div class="form-group">
            <label for="confirm_password">Confirmer votre mot de passe</label>
            <input class="form-control" type="password" placeholder="Confirm Password" id="confirm_password" required>
        </div>
        <div class="form-group">
            <button type="submit" class="auth-btn btn btn-primary">Envoy√©</button>
            <a href="/login" class="register-link btn btn-link">Annuler</a>
        </div>
    </form>
</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="/assets/recovery.js"></script>

<%- include('partials/footer') %>